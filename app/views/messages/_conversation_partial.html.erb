<div class="converge" data-id="<%=friend_id%>">
	<% messages.each do |message|%>
		<%= render partial: "new_message_partial", locals: {message: message, friend_id: friend_id} %>
	<%end%>
	




	<div class="new-message">
		<%=form_for :message, url:messages_path(recipient_id: friend_id), remote: true, html: {id: "create_new_message_form"} do |f| %>
			                
			<%= f.text_field :message, class: "message-form2", placeholder: "send new message..."%>
		    <%=f.submit "Send", class: "btn btn-primary msg-sub"%>
	    <%end%>
	</div>
</div>
